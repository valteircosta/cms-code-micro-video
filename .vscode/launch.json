{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9001,
            // "log": true,
            // "externalConsole": false,
            "pathMappings": {
                "/var/www/backend": "${workspaceFolder}/var/www/backend"
            },
            // "ignore": ["**/vendor/**/*.php"],
            "xdebugSettings": {
                "max_data": 65535,
                "show_hidden": 1,
                "max_children": 100,
                "max_depth": 5
            }
        }
    ]
}
